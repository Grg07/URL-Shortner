<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
    <style>
        body{
            background-color: rgb(10, 26, 37);
            color: aliceblue;
            text-decoration: aliceblue;
        }
        thead{
            color: rgb(71, 163, 103);
        }

    </style>        
</head>
<body>
    <h1>URL Shortener</h1>

    <% if (locals.sh) { %>
     <h4>Short URL : <%= sh %></h4>
     <h4>Click here to visit : <a href="http://localhost:8001/short/<%=sh %>" target="_blank">http://localhost:8001/short/<%=sh %></a></h4>
    <% } %>

    <form action="/generate" method="post">

    <label for="url">URL : </label>
    <input type="text" id="url" name="redirectUrl">
    <button>Generate</button>

    </form>
    
    <br><br>

    <% if (locals.allurl) { %>
     <table>
        
        <thead>
            <tr>
                <th>Sr.No</th>
                <th>Oringnal URL</th>
                <th>Short URL</th>
                <th>Created By</th>
            </tr>
        </thead>

        <tbody>
            <% allurl.forEach( (url,i) => { %>
                <tr>
                    <td><%=i+1 %></td>
                    <td><%=url.redirectUrl %></td>
                    <td><%=url.shortUrl %></td>
                    <td><%=uname %></td>
                </tr>
            <% }) %>
        </tbody>

     </table>
    <% } %>
    <% if (!locals.allurl) { %>
        <h3>No Urls available ..</h3>
    <% } %>     


</body>
</html>